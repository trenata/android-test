<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_image_1" />

    <TextView
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/TitleDistanceBottom"
        android:gravity="center"
        android:text="@string/onboarding_1_title"
        android:textColor="@color/whiteTitle"
        android:textSize="@dimen/titleSize"
        app:layout_constraintBottom_toTopOf="@+id/description_1" />

    <TextView
        android:id="@+id/description_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/descriptionDistanceBottom"
        android:layout_marginHorizontal="@dimen/descriptionDistanceSides"
        android:layout_marginTop="@dimen/descriptionDistanceTop"
        android:gravity="center"
        android:text="@string/onboarding_1_description"
        android:textColor="@color/whiteDescription"
        android:textSize="@dimen/descriptionSize"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>